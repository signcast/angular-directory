.pseudo-table
  .pseudo-table-cell
    .container
      .row
        .col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
          .panel.panel-primary
            .panel-heading
              h3.header Admin-Login
            .panel-body
              form.form(name='form', ng-submit='login(form)', novalidate='')
                .form-group
                  label Username
                  input.form-control.input-lg(type='text', name='username', ng-model='user.username')
                .form-group
                  label Password
                  input.form-control.input-lg(type='password', name='password', ng-model='user.password')

                .form-group.has-error
                  p.help-block(ng-show='form.email.$error.required && form.password.$error.required && submitted')
                    | Please enter your username and password.
                  p.help-block {{ errors.other }}

                div
                  button.btn.btn-primary.btn-lg(type='submit')
                    | Login
