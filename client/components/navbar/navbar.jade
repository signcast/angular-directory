div.navbar.navbar-inverse.navbar-static-top(ng-controller='NavbarCtrl')
  div.container
    div.navbar-header
      button.navbar-toggle(type='button', ng-click='isCollapsed = !isCollapsed')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') Residents

    div#navbar-main.navbar-collapse.collapse(collapse='isCollapsed')
      ul.nav.navbar-nav
        li(ng-repeat='item in menu', ui-sref-active='active')
          a(ui-sref='{{item.state}}') {{item.title}}

      ul.nav.navbar-nav.navbar-right
        li(ng-show='isLoggedIn()', ui-sref-active='active')
          a(ui-sref='admin.settings')
            span.glyphicon.glyphicon-cog

        li(ng-show='isLoggedIn()')
          a(href="#", ng-click="logout()") Logout
